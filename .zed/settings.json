{
  "language_servers": ["...", "oxc"],
  "languages": {
    "TypeScript": {
      "language_servers": ["angular", "...", "oxc"]
    },
    "HTML": {
      "language_servers": ["angular", "..."]
    }
  },
  "formatter": {
    "language_server": {
      "name": "oxc"
    }
  },
  "lsp": {
    "oxc": {
      "initialization_options": {
        "options": {
          "typeAware": true,
          "fmt.experimental": true
        }
      }
    }
  },
  "code_actions_on_format": {
    "source.fixAll": true
  }
}
