{
  "name": "@auto-coach/core",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -b",
    "build:watch": "tsc -b --watch",
    "test": "vitest",
    "test:ci": "vitest run --silent",
    "checks": "bunx biome check",
