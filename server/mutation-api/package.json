{
  "name": "@auto-coach/mutation-api",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --hot --inspect src/index.ts",
    "build": "bun build src/index.ts --target=bun-linux-x64 --outfile=dist/server --compile --minify --sourcemap --bytecode",
    "start": "./dist/server",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "container:build": "docker build -f Dockerfile -t auto-coach-mutation-api ../../",
    "container:run": "docker run -p 3001:3001 auto-coach-mutation-api",
    "deploy": "bun run --cwd ../../ops deploy mutation-api",
    "deploy:dev": "bun run deploy --env dev",
    "deploy:prod": "bun run deploy --env prod",
    "deploy:dry": "bun run deploy --dry-run",
    "prepare": "effect-language-service patch --dir ../../node_modules/typescript"
  },
  "dependencies": {
    "@effect/platform": "0.93.5",
    "@google-cloud/tasks": "6.2.1",
    "@hono/effect-validator": "1.2.0",
    "arktype": "2.1.27",
    "dotenv": "17.2.3",
    "effect": "3.19.8",
    "firebase-admin": "13.6.0",
    "hono": "catalog:"
  },
  "devDependencies": {
    "@effect/language-service": "0.57.1",
    "@effect/vitest": "0.27.0",
    "@types/bun": "catalog:",
    "msw": "2.12.3",
    "typescript": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  }
}
