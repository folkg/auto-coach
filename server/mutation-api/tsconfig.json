{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "paths": {
      "@common/*": ["../../common/src/*"],
      "@core/*": ["../core/src/*"],
    },
    "plugins": [
      {
        "name": "@effect/language-service",
      },
    ],
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
}
