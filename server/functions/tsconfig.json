{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["es2023"],
    "outDir": "./lib",
    "types": ["node"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "declaration": true,
    "declarationMap": true,

    "paths": {
      "@common/*": ["../../common/*"]
    }
  },
  "exclude": ["node_modules", "lib"],
  "include": ["src/**/*.ts", "src/**/*.json"],
  "references": [{ "path": "../../common/tsconfig.json" }]
}
