{
  "name": "@auto-coach/server",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --hot --inspect src/index.ts",
    "build": "bun build src/index.ts --target=bun-linux-x64 --outfile=dist/server --compile --minify --sourcemap --bytecode",
    "start": "./dist/server",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "container:build": "docker build -f Dockerfile -t auto-coach-api ../../",
    "container:run": "docker run -p 3000:3000 auto-coach-api"
  },
  "dependencies": {
    "@hono/arktype-validator": "2.0.1",
    "@sendgrid/mail": "8.1.6",
    "arktype": "catalog:",
    "axios": "1.12.2",
    "axios-retry": "4.5.0",
    "dotenv": "16.5.0",
    "fast-xml-parser": "5.3.2",
    "firebase-admin": "13.5.0",
    "firebase-functions": "6.5.0",
    "google-auth-library": "10.4.0",
    "hono": "catalog:",
    "js2xmlparser": "5.0.0",
    "p-limit": "7.1.1",
    "spacetime": "catalog:"
  },
  "devDependencies": {
    "@types/node": "24.7.2",
    "typescript": "catalog:"
  }
}
