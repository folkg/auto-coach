{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint -- --fix",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "emulators": {
    "firestore": {
      "host": "localhost",
      "port": "5000"
    }
  },
  "hosting": {
    "rewrites": [
      {
        "source": "/sendfeedbackemail",
        "function": "sendfeedbackemail",
        "region": "us-central1"
      },
      {
        "source": "/getaccesstoken",
        "function": "getaccesstoken",
        "region": "us-central1"
      },
      {
        "source": "/refreshteams",
        "function": "refreshteams",
        "region": "us-central1"
      }
    ]
  }
}
