{
  "name": "auto-coach-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server/api",
    "server/core",
    "server/functions",
    "server/mutation-api",
    "common"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:api\" \"bun run dev:client\"",
    "dev:api": "bun run --cwd server/api dev",
    "dev:client": "bun run --cwd client start",
    "dev:emulators": "firebase emulators:start",
    "test": "bunx vitest --silent passed-only",
    "test:ci": "bunx vitest run --silent passed-only",
    "test:server": "bunx vitest run --project=server-core --project=server-functions --project=mutation-api",
    "test:client": "bun run --cwd client test:ci",
    "lint": "bunx oxlint --type-aware --type-check",
    "lint:fix": "bunx oxlint --type-aware --type-check --fix",
    "format": "bunx oxfmt",
    "format:check": "bunx oxfmt --check",
    "fix": "bun run format && bun run lint:fix",
    "checks": "bun run fix && bun run test:ci && bun run build:client && echo 'All checks passed!'",
    "checks:ci": "bun run format:check && bun run lint && bun run test:ci && echo 'All checks passed!'",
    "build": "bun run build:common && bun run build:core && echo 'All builds complete!'",
    "build:common": "tsc --project common/tsconfig.json",
    "build:core": "tsc --project server/core/tsconfig.json",
    "build:client": "bun run --cwd client build",
    "build:api": "bun run --cwd server/api build",
    "build:api:local": "bun run --cwd server/api build:local",
    "clean": "tsc -b --clean",
    "container:build": "docker build -f server/api/Dockerfile -t auto-coach-api .",
    "container:build:cloud": "docker build --platform linux/amd64 -f server/api/Dockerfile -t auto-coach-api .",
    "container:run": "docker run -p 3000:3000 -e FIREBASE_PROJECT_ID=${FIREBASE_PROJECT_ID:-auto-gm-372620} -e ALLOWED_ORIGINS=${ALLOWED_ORIGINS:-http://localhost:4200} auto-coach-api",
    "container:build:mutation-api": "docker build -f server/mutation-api/Dockerfile -t auto-coach-mutation-api .",
    "container:build:mutation-api:cloud": "docker build --platform linux/amd64 -f server/mutation-api/Dockerfile -t auto-coach-mutation-api .",
    "container:run:mutation-api": "docker run -p 3001:3001 -e FIREBASE_PROJECT_ID=${FIREBASE_PROJECT_ID:-auto-gm-372620} -e ALLOWED_ORIGINS=${ALLOWED_ORIGINS:-http://localhost:4200} auto-coach-mutation-api",
    "deploy": "bun ops/deploy.ts",
    "deploy:api:dev": "GCP_PROJECT_ID=auto-gm-372620 bun run deploy -- --component api --env dev",
    "deploy:api:prod": "GCP_PROJECT_ID=auto-gm-372620 bun run deploy -- --component api --env prod",
    "deploy:mutation-api:prod": "GCP_PROJECT_ID=auto-gm-372620 bun ops/tools/mutation-api.ts --env prod",
    "deploy:client:dev": "bun run deploy -- --component client --env dev --channel dev",
    "deploy:client:prod": "bun run deploy -- --component client --env prod",
    "deploy:functions": "bun run deploy -- --component functions --env prod",
    "deploy:firestore": "bun run deploy -- --component firestore --env prod",
    "dispatch:set-lineup": "curl -X POST 'https://mutation-api-prod-nw73xubluq-uc.a.run.app/mutations/set-lineup' -H 'Content-Type: application/json' -d '{\"userId\": \"scheduler\", \"teamKey\": \"all\", \"lineupChanges\": [], \"skipGamesCheck\": true}'",
    "deploy:full:dev": "GCP_PROJECT_ID=auto-gm-372620 bun run deploy -- --component full --env dev",
    "deploy:full:prod": "GCP_PROJECT_ID=auto-gm-372620 bun run deploy -- --component full --env prod",
    "update-latest": "bun update -i --recursive --latest",
    "clean:modules": "find . -type d -name 'node_modules' -prune -exec rm -rf '{}' +"
  },
  "catalog": {
    "arktype": "2.1.28",
    "firebase-admin": "13.5.0",
    "hono": "4.10.7",
    "spacetime": "7.11.0",
    "typescript": "5.9.3",
    "vitest": "4.0.15",
    "@vitest/browser": "4.0.15",
    "@vitest/browser-playwright": "4.0.15",
    "playwright": "1.57.0",
    "vite": "7.2.7",
    "vite-tsconfig-paths": "5.1.4",
    "@types/bun": "1.3.4"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "2.1.3",
    "@types/bun": "1.3.8",
    "@vitest/browser": "catalog:",
    "@vitest/coverage-v8": "4.0.16",
    "concurrently": "9.2.1",
    "oxfmt": "0.17.0",
    "oxlint": "1.32.0",
    "oxlint-tsgolint": "0.8.4",
    "playwright": "catalog:",
    "tslib": "2.8.1",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "yaml": "2.8.2"
  }
}
