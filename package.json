{
  "name": "auto-coach-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server/api",
    "server/core",
    "server/functions",
    "common"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:api\" \"bun run dev:client\"",
    "dev:api": "bun run --cwd server/api dev",
    "dev:client": "bun run --cwd client start",
    "dev:emulators": "firebase emulators:start",
    "test": "bunx vitest --silent passed-only",
    "test:ci": "bunx vitest run --silent passed-only",
    "test:server": "bunx vitest run --project=server-core --project=server-functions",
    "test:client": "bunx vitest run --project=client",
    "fix": "bunx biome check --fix",
    "checks": "bun run fix && bun run test:ci && bun run build && bun run build:client && echo 'All checks passed!'",
    "build": "tsc -b && echo 'All builds complete!'",
    "build:client": "bun run --cwd client build",
    "build:api": "bun run --cwd server/api build",
    "clean": "tsc -b --clean",
    "container:build": "docker build -f server/api/Dockerfile -t auto-coach-api .",
    "container:build:cloud": "docker build --platform linux/amd64 -f server/api/Dockerfile -t auto-coach-api .",
    "container:run": "docker run -p 3000:3000 -e FIREBASE_PROJECT_ID=${FIREBASE_PROJECT_ID:-auto-gm-372620} -e ALLOWED_ORIGINS=${ALLOWED_ORIGINS:-http://localhost:4200} auto-coach-api",
    "infra:init": "cd infrastructure/opentofu && make init",
    "infra:plan:dev": "cd infrastructure/opentofu && make plan ENVIRONMENT=dev",
    "infra:plan:prod": "cd infrastructure/opentofu && make plan ENVIRONMENT=prod",
    "infra:apply:dev": "cd infrastructure/opentofu && make apply ENVIRONMENT=dev",
    "infra:apply:prod": "cd infrastructure/opentofu && make apply ENVIRONMENT=prod",
    "infra:output": "cd infrastructure/opentofu && make output",
    "infra:status:dev": "cd infrastructure/opentofu && make status ENVIRONMENT=dev",
    "infra:status:prod": "cd infrastructure/opentofu && make status ENVIRONMENT=prod",
    "infra:validate": "cd infrastructure/opentofu && make validate",
    "infra:fmt": "cd infrastructure/opentofu && make fmt",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:hosting": "firebase deploy --only hosting",
    "firebase:deploy:functions": "firebase deploy --only functions",
    "firebase:deploy:firestore": "firebase deploy --only firestore",
    "firebase:login": "firebase login",
    "firebase:use:dev": "firebase use dev",
    "firebase:use:prod": "firebase use prod",
    "update-latest": "bun update -i --recursive --latest"
  },
  "catalog": {
    "arktype": "2.1.22",
    "firebase-admin": "13.5.0",
    "hono": "4.9.12",
    "spacetime": "7.11.0",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "1.21.2",
    "@analogjs/vitest-angular": "1.21.2",
    "@biomejs/biome": "2.2.6",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "concurrently": "9.2.1",
    "playwright": "1.56.0",
    "typescript": "catalog:",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  }
}
