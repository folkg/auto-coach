{
  "name": "auto-coach-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server/functions"
  ],
  "scripts": {
    "test": "bun --filter '*' test",
    "test:ci": "bun --filter '*' test:ci",
    "checks": "bun --filter '*' checks",
    "fix": "bun --filter '*' fix",
    "types": "bun --filter '*' types",
    "all-checks": "bun --filter '*' all-checks && echo 'All checks passed!'",
    "build": "bun --filter '*' build && echo 'All builds complete!'",
    "deploy:dry": "bun --filter '*' deploy:dry && echo 'Dry run complete!'"
  },
  "dependencies": {
    "arktype": "2.1.20",
    "spacetime": "7.10.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@vitest/coverage-v8": "3.1.2",
    "typescript": "5.8.3",
    "vitest": "3.1.2"
  }
}
