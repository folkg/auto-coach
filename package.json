{
	"name": "auto-coach-monorepo",
	"private": true,
	"type": "module",
	"workspaces": [
		"client",
		"server/api",
		"server/core",
		"server/functions",
		"server/mutation-api",
		"common"
	],
	"scripts": {
		"dev": "concurrently \"bun run dev:api\" \"bun run dev:client\"",
		"dev:api": "bun run --cwd server/api dev",
		"dev:client": "bun run --cwd client start",
		"dev:emulators": "firebase emulators:start",
		"test": "bunx vitest --silent passed-only",
		"test:ci": "bunx vitest run --silent passed-only",
		"test:server": "bunx vitest run --project=server-core --project=server-functions --project=mutation-api",
		"test:client": "bun run --cwd client test:ci",
		"lint": "bunx oxlint --type-aware --type-check",
		"lint:fix": "bunx oxlint --type-aware --type-check --fix",
		"format": "bunx oxfmt",
		"format:check": "bunx oxfmt --check",
		"fix": "bun run format && bun run lint:fix",
		"checks": "bun run fix && bun run test:ci && bun run build:client && echo 'All checks passed!'",
		"checks:ci": "bun run format:check && bun run lint && bun run test:ci && echo 'All checks passed!'",
		"build": "tsc -b && echo 'All builds complete!'",
		"build:client": "bun run --cwd client build",
		"build:api": "bun run --cwd server/api build",
		"build:mutation-api": "bun run --cwd server/mutation-api build",
		"clean": "tsc -b --clean",
		"container:build": "docker build -f server/api/Dockerfile -t auto-coach-api .",
		"container:build:cloud": "docker build --platform linux/amd64 -f server/api/Dockerfile -t auto-coach-api .",
		"container:run": "docker run -p 3000:3000 -e FIREBASE_PROJECT_ID=${FIREBASE_PROJECT_ID:-auto-gm-372620} -e ALLOWED_ORIGINS=${ALLOWED_ORIGINS:-http://localhost:4200} auto-coach-api",
		"container:build:mutation-api": "docker build -f server/mutation-api/Dockerfile -t auto-coach-mutation-api .",
		"container:build:mutation-api:cloud": "docker build --platform linux/amd64 -f server/mutation-api/Dockerfile -t auto-coach-mutation-api .",
		"container:run:mutation-api": "docker run -p 3001:3001 -e FIREBASE_PROJECT_ID=${FIREBASE_PROJECT_ID:-auto-gm-372620} -e ALLOWED_ORIGINS=${ALLOWED_ORIGINS:-http://localhost:4200} auto-coach-mutation-api",
		"deploy": "bun run --cwd ops deploy.ts",
		"deploy:api:dev": "GCP_PROJECT_ID=auto-gm-372620 bun run deploy api --env dev",
		"deploy:api:prod": "GCP_PROJECT_ID=auto-gm-372620 bun run deploy api --env prod",
		"deploy:mutation-api:dev": "GCP_PROJECT_ID=auto-gm-372620 bun run deploy mutation-api --env dev",
		"deploy:mutation-api:prod": "GCP_PROJECT_ID=auto-gm-372620 bun run deploy mutation-api --env prod",
		"deploy:client:dev": "bun run deploy client --env dev --channel dev",
		"deploy:client:prod": "bun run deploy client --env prod",
		"deploy:functions": "bun run deploy functions --env prod",
		"deploy:firestore": "bun run deploy firestore --env prod",
		"deploy:full:dev": "GCP_PROJECT_ID=auto-gm-372620 bun run deploy full --env dev",
		"deploy:full:prod": "GCP_PROJECT_ID=auto-gm-372620 bun run deploy full --env prod",
		"update-latest": "bun update -i --recursive --latest",
		"clean:modules": "find . -type d -name 'node_modules' -prune -exec rm -rf '{}' +"
	},
	"catalog": {
		"arktype": "2.1.22",
		"firebase-admin": "13.5.0",
		"hono": "4.9.12",
		"spacetime": "7.11.0",
		"typescript": "5.9.3",
		"vitest": "4.0.14",
		"@vitest/browser": "4.0.14",
		"@vitest/browser-playwright": "4.0.14",
		"playwright": "1.56.0",
		"vite": "7.2.4",
		"vite-tsconfig-paths": "5.1.4"
	},
	"devDependencies": {
		"@analogjs/vite-plugin-angular": "2.1.1",
		"@types/bun": "1.3.1",
		"@types/node": "24.7.2",
		"@vitest/browser": "catalog:",
		"@vitest/coverage-v8": "4.0.14",
		"concurrently": "9.2.1",
		"oxfmt": "0.15.0",
		"oxlint": "1.30.0",
		"oxlint-tsgolint": "0.8.3",
		"playwright": "catalog:",
		"tslib": "2.8.1",
		"typescript": "catalog:",
		"vite": "catalog:",
		"vite-tsconfig-paths": "catalog:",
		"vitest": "catalog:"
	},
	"dependencies": {
		"yaml": "2.8.1"
	}
}
