{
  "name": "auto-coach-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server/api",
    "server/core",
    "server/functions",
    "common"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:api\" \"bun run dev:client\"",
    "dev:api": "bun run --cwd server/api dev",
    "dev:client": "bun run --cwd client start",
    "dev:emulators": "firebase emulators:start",
    "test": "bunx vitest --silent passed-only",
    "test:ci": "bunx vitest run --silent passed-only",
    "test:server": "bunx vitest run --project=server-core --project=server-functions",
    "test:client": "bunx vitest run --project=client",
    "fix": "bunx biome check --fix",
    "checks": "bun run fix && bun run test:ci && bun run build && bun run build:client && echo 'All checks passed!'",
    "build": "tsc -b && echo 'All builds complete!'",
    "build:client": "bun run --cwd client build",
    "build:api": "bun --filter @auto-coach/server build",
    "clean": "tsc -b --clean",
    "container:build": "docker build -f server/api/Dockerfile -t auto-coach-api .",
    "container:run": "bun --filter @auto-coach/server container:run",
    "deploy:dry": "bun --filter @auto-coach/infrastructure deploy:dry",
    "deploy": "bun --filter @auto-coach/infrastructure deploy",
    "deploy:dev": "bun --filter @auto-coach/infrastructure deploy:dev",
    "deploy:prod": "bun --filter @auto-coach/infrastructure deploy:prod",
    "infrastructure:build": "bun --filter @auto-coach/infrastructure build",
    "infrastructure:init:dev": "bun --filter @auto-coach/infrastructure stack:init:dev",
    "infrastructure:init:prod": "bun --filter @auto-coach/infrastructure stack:init:prod",
    "infrastructure:config": "bun --filter @auto-coach/infrastructure config:set"
  },
  "dependencies": {
    "arktype": "2.1.20",
    "firebase-admin": "13.4.0",
    "hono": "4.7.8",
    "spacetime": "7.10.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "1.17.0",
    "@analogjs/vitest-angular": "1.17.0",
    "@biomejs/biome": "2.0.0-beta.5",
    "@vitest/browser": "3.1.2",
    "@vitest/coverage-v8": "3.1.2",
    "concurrently": "9.1.0",
    "playwright": "1.52.0",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.2"
  }
}
