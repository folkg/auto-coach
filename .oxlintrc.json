{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript", "unicorn", "vitest"],
  "categories": {
    "correctness": "error"
  },
  "rules": {
    "no-restricted-globals": [
      "error",
      {
        "deniedGlobals": ["event", "length", "stop", "toString", "alert", "origin", "status"]
      }
    ],
    "curly": "off",
    "no-else-return": "error",
    "prefer-for-of": "error",
    "no-param-reassign": "error",
    "prefer-as-const": "error",
    "default-param-last": "error",
    "prefer-enum-initializers": "error",
    "self-closing-comp": "error",
    "no-unnecessary-template-expression": "error",
    "prefer-number-properties": "error",
    "no-inferrable-types": "error",
    "no-useless-constructor": "error",
    "no-unused-private-class-members": "error",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_",
        "destructuredArrayIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/require-await": "error",
    "no-empty": "error",
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-floating-promises": "error",
    "no-disabled-tests": "error",
    "no-this-alias": "off",
    "no-conditional-expect": "off",
    "no-standalone-expect": "off",
    "expect-expect": "off",
    "valid-title": "off",
    "require-to-throw-message": "off",
    "no-useless-length-check": "off",
    "no-unused-expressions": "error",
    "unbound-method": "off",
    "restrict-template-expressions": "off",
    "no-redundant-type-constituents": "off",
    "no-duplicate-type-constituents": "off",
    "@typescript-eslint/await-thenable": "error",
    "@typescript-eslint/no-for-in-array": "error",
    "@typescript-eslint/no-implied-eval": "error",
    "@typescript-eslint/no-misused-new": "error",
    "@typescript-eslint/no-misused-promises": "error",
    "@typescript-eslint/no-misused-spread": "error",
    "@typescript-eslint/no-unsafe-unary-minus": "error",
    "typescript/consistent-type-imports": "error",
    "for-direction": "error",
    "getter-return": "error",
    "no-async-promise-executor": "error",
    "no-case-declarations": "error",
    "no-class-assign": "error",
    "no-compare-neg-zero": "error",
    "no-cond-assign": "error",
    "no-const-assign": "error",
    "no-constant-binary-expression": "error",
    "no-constant-condition": "error",
    "no-control-regex": "error",
    "no-debugger": "error",
    "no-delete-var": "error",
    "no-dupe-class-members": "error",
    "no-dupe-else-if": "error",
    "no-dupe-keys": "error",
    "no-duplicate-case": "error",
    "no-empty-character-class": "error",
    "no-empty-pattern": "error",
    "no-empty-static-block": "error",
    "no-ex-assign": "error",
    "no-extra-boolean-cast": "error",
    "no-fallthrough": "error",
    "no-func-assign": "error",
    "no-global-assign": "error",
    "no-import-assign": "error",
    "no-invalid-regexp": "error",
    "no-irregular-whitespace": "error",
    "no-loss-of-precision": "error",
    "no-new-native-nonconstructor": "error",
    "no-nonoctal-decimal-escape": "error",
    "no-obj-calls": "error",
    "no-prototype-builtins": "error",
    "no-redeclare": "error",
    "no-regex-spaces": "error",
    "no-self-assign": "error",
    "no-setter-return": "error",
    "no-shadow-restricted-names": "error",
    "no-sparse-arrays": "error",
    "no-this-before-super": "error",
    "no-undef": "error",
    "no-unreachable": "error",
    "no-unsafe-finally": "error",
    "no-unsafe-negation": "error",
    "no-unsafe-optional-chaining": "error",
    "no-unused-labels": "error",
    "no-useless-backreference": "error",
    "no-useless-catch": "error",
    "no-useless-escape": "error",
    "no-with": "error",
    "require-yield": "error",
    "use-isnan": "error",
    "valid-typeof": "error",
    "no-array-constructor": "error",
    "no-unexpected-multiline": "off",
    "prefer-promise-reject-errors": "off",
    "@typescript-eslint/prefer-promise-reject-errors": "error",
    "no-throw-literal": "off",
    "@typescript-eslint/only-throw-error": "error",
    "block-scoped-var": "error",
    "eqeqeq": "error",
    "no-var": "error"
  },
  "globals": {
    "structuredClone": "readonly",
    "localStorage": "readonly",
    "window": "readonly",
    "require": "readonly",
    "console": "readonly",
    "getComputedStyle": "readonly",
    "crypto": "readonly",
    "process": "readonly",
    "Request": "readonly",
    "global": "readonly",
    "Buffer": "readonly",
    "setTimeout": "readonly",
    "Event": "readonly",
    "navigator": "readonly",
    "Headers": "readonly",
    "Response": "readonly",
    "fetch": "readonly",
    "document": "readonly",
    "sessionStorage": "readonly"
  },
  "ignorePatterns": [
    "**/node_modules/**/*",
    "**/client/.angular/**/*",
    "**/dist/**/*",
    "**/lib/**/*",
    "**/client/vitest.config.ts",
    "**/server/functions/vite.config.js",
    "**/server/core/vite.config.js",
    "**/client/src/env.types.ts"
  ],
  "overrides": [
    {
      "files": ["server/mutation-api/*.ts"],
      // Eventually, these rules will apply everywhere and these overrides can go away
      "rules": {
        "@typescript-eslint/no-unsafe-type-assertion": "error",
        "@typescript-eslint/no-unsafe-assignment": "error"
      }
    }
  ],
  "settings": {
    "vitest": {
      "typecheck": true
    }
  }
}
